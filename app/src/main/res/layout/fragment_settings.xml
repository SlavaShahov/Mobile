<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скорость игры:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/sbGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скорость: 5x"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Максимальное количество тараканов:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/sbMaxCockroaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="10"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvMaxCockroaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Макс. тараканов: 10"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Интервал появления бонусов:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/sbBonusInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="30"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvBonusInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Интервал бонусов: 30 сек"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Длительность раунда:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/sbRoundDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            android:progress="120"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvRoundDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Длительность раунда: 120 сек"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начать игру"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>